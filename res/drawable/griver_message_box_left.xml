<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/griver_message_box_pressed" />
            <corners android:bottomLeftRadius="@dimen/griver_ui_message_box_radius" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:bottomLeftRadius="@dimen/griver_message_box_radius" />
        </shape>
    </item>
</selector>