<?xml version="1.0" encoding="utf-8"?>
<selector android:enterFadeDuration="400" android:exitFadeDuration="400"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="2.0dip" android:color="?imgly_icon_border_color_active" />
                    <solid android:color="?imgly_transparent_color" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="?imgly_transparent_color" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>